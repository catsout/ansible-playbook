global:
  resolve_timeout: 5m

templates:
  - /etc/alertmanager/template/*.tmpl

route:
  group_by: ['alertname', 'instance', 'service']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h
  receiver: pushover

receivers:
  - name: pushover
    pushover_configs:
      - token: {{ alertmanager_pushover_token }}
        user_key: {{ alertmanager_pushover_user_key }}
