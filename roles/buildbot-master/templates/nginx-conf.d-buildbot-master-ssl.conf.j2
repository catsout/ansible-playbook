server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name {{ buildbot_master_domain }};

    # Load common SSL options
    include /etc/nginx/default.d/ssl.conf;

    # certs sent to the client in SERVER HELLO are concatenated in ssl_certificate
    ssl_certificate /etc/dehydrated/certs/{{ buildbot_master_domain }}/fullchain.pem;
    ssl_certificate_key /etc/dehydrated/certs/{{ buildbot_master_domain }}/privkey.pem;

    ## verify chain of trust of OCSP response using Root CA and Intermediate certs
    ssl_trusted_certificate /etc/dehydrated/certs/{{ buildbot_master_domain }}/chain.pem;

    location /sources {
        alias {{ buildbot_master_sources }};
    }

    location / {
        deny all;
    }
}
